            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".FoodModule.AddBreakfastActivity"
            android:theme="@style/MyThemeOne"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".FoodModule.AddWeightActivity"
