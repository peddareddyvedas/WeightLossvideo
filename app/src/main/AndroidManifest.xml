            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".MoreModule.Activity_DeleteAccount" />
        <activity android:name=".MoreModule.ShareandEarnActivity" />
        <activity android:name=".MoreModule.ScrachCardActivity" />
        <activity android:name=".MoreModule.Activity_Units" />
        <activity android:name=".MoreModule.Activity_Reminders" />
        <activity android:name=".MoreModule.ActivityRemainder_EditPage" />
