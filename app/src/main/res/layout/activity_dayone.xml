<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <include
            android:id="@+id/toolbar"
            layout="@layout/activity_hometoolbar" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#F3EFEF">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="13dp"
            android:id="@+id/main"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <com.vedas.weightloss.FONTS.TextViewFontStyle
                android:layout_width="wrap_content"
                android:text="1,840"
                android:id="@+id/txt1"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />
            <com.vedas.weightloss.FONTS.TextViewFontStyle
                android:layout_width="wrap_content"
                android:text="-"
                android:id="@+id/txt2"
                android:layout_toRightOf="@+id/txt1"
                android:layout_marginLeft="35dp"
                android:layout_height="wrap_content" />
            <com.vedas.weightloss.FONTS.TextViewFontStyle
                android:layout_width="wrap_content"
                android:text="0"
                android:id="@+id/txt3"
                android:layout_toRightOf="@+id/txt2"
                android:layout_marginLeft="30dp"
                android:textColor="@color/colorBlack"
                android:layout_height="wrap_content" />
            <com.vedas.weightloss.FONTS.TextViewFontStyle
                android:layout_width="wrap_content"
                android:text="+"
                android:id="@+id/txt4"
                android:layout_toRightOf="@+id/txt3"
                android:layout_marginLeft="40dp"
                android:layout_height="wrap_content" />
            <com.vedas.weightloss.FONTS.TextViewFontStyle
                android:layout_width="wrap_content"
                android:text="0"
                android:id="@+id/txt5"
                android:layout_toRightOf="@+id/txt4"
                android:layout_marginLeft="40dp"
                android:textColor="@color/colorBlack"
                android:layout_height="wrap_content" />
            <com.vedas.weightloss.FONTS.TextViewFontStyle
                android:layout_width="wrap_content"
                android:text="="
                android:id="@+id/txt6"
                android:layout_toRightOf="@+id/txt5"
                android:layout_marginLeft="40dp"
                android:layout_height="wrap_content" />
            <com.vedas.weightloss.FONTS.TextViewFontStyle
                android:layout_width="wrap_content"
                android:text="1,840"
                android:id="@+id/txt7"
                android:layout_toRightOf="@+id/txt6"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorBlack"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/main"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
            <com.vedas.weightloss.FONTS.TextViewFontStyle
                android:layout_width="wrap_content"
                android:text="Goal"
                android:id="@+id/tx1"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />

            <com.vedas.weightloss.FONTS.TextViewFontStyle
                android:layout_width="wrap_content"
                android:text="Food"
                android:id="@+id/tx2"
                android:layout_toRightOf="@+id/tx1"
                android:layout_marginLeft="60dp"
                android:layout_height="wrap_content" />

            <com.vedas.weightloss.FONTS.TextViewFontStyle
                android:layout_width="wrap_content"
                android:text="Exercise"
                android:id="@+id/tx3"
                android:layout_toRightOf="@+id/tx2"
                android:layout_marginLeft="60dp"
                android:layout_height="wrap_content" />
            <com.vedas.weightloss.FONTS.TextViewFontStyle
                android:layout_width="wrap_content"
                android:text="Remaining"
                android:id="@+id/tx4"
                android:layout_toRightOf="@+id/tx3"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content" />


        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/Relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerviewbeakfast"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:layoutAnimation="@anim/layout_animation_fall_down" />

    </RelativeLayout>


</LinearLayout>
