<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="230dp"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/colorRed"
        >

        <TextView
            android:id="@+id/text_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorWhite"
             />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/rl_number_picker">

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/number_picker"
            android:layout_width="100dp"
            android:layout_height="150dp"
            app:np_width="64dp"
            app:np_height="160dp"
            app:np_dividerColor="@color/colorRed"
            app:np_textSize="18dp"
            >
        </com.shawnlin.numberpicker.NumberPicker>
        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/number_pickertwo"
            android:layout_width="80dp"
            android:layout_height="150dp"
            app:np_width="64dp"
            app:np_height="160dp"
            android:layout_marginLeft="120dp"
            app:np_dividerColor="@color/colorRed"
            app:np_textSize="18dp"
            >
        </com.shawnlin.numberpicker.NumberPicker>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="45dp"
        android:visibility="gone"
        android:id="@+id/rl_blood"
        android:layout_height="wrap_content">
        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/number_pickerthree"
            android:layout_width="130dp"
            android:layout_height="150dp"
            app:np_width="64dp"
            app:np_height="160dp"
            android:layout_centerHorizontal="true"
            app:np_dividerColor="@color/colorRed"
            app:np_textSize="18dp"
            >
        </com.shawnlin.numberpicker.NumberPicker>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_buttons"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/rl_number_picker"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.495"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="cancel"
                    android:background="@color/colorRed"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.01"
                android:background="@color/colorRed"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:text="Large Text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.495"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Ok"
                    android:background="@color/colorRed"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorWhite" /> />

            </LinearLayout>
        </LinearLayout>
</RelativeLayout>
</RelativeLayout>