<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:elevation="3dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="1dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">


            <com.vedas.weightloss.FONTS.TextViewFontStyle
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Invitation Code"
                android:textColor="#000000"
                android:textSize="16sp" />

            <FrameLayout
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_below="@id/title"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp">

                <VideoView
                    android:id="@+id/video"
                    android:layout_width="300dp"
                    android:layout_height="150dp"
                    android:layout_below="@id/title"
                    />

                <ImageView
                    android:id="@+id/thumb"
                    android:layout_width="300dp"
                    android:layout_height="150dp"
                    android:layout_below="@id/title"
                    android:layout_centerHorizontal="true"/>

            </FrameLayout>

            <ImageView
                android:id="@+id/play"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="75dp"
                android:background="@drawable/ic_youtube"
                android:visibility="visible" />


            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/progrss"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="75dp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.vedas.weightloss.FONTS.BoldTextViewFontStyle
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="lkojsnflnlkfn"
                android:textColor="#000000"
                android:textSize="16sp" />

            <com.vedas.weightloss.FONTS.TextViewFontStyle
                android:id="@+id/discription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="lkojsnflnlkfn"
                android:textColor="#000000"
                android:textSize="16sp" />

            <com.vedas.weightloss.FONTS.ButtonFontStyle
                android:id="@+id/button"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_below="@+id/discription"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorRed"
                android:text="Get Recipe"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"

                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/button" />


        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>